<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WelcomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_main_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal"
            android:text="@string/create_app_account"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_main_option_one_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/iv_accept"
            app:layout_constraintStart_toStartOf="@+id/tv_main_title_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_title_id"
            tools:ignore="RtlCompat"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_one"
            android:textColor="@color/text_label"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_option_one_id"
            app:layout_constraintStart_toEndOf="@+id/iv_main_option_one_id"
            app:layout_constraintTop_toTopOf="@+id/iv_main_option_one_id"
            tools:ignore="RtlCompat,RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_main_option_two_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/iv_accept"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_option_one_id"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_option_one_id"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/option_two"
            android:textColor="@color/text_label"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_option_two_id"
            app:layout_constraintStart_toEndOf="@+id/iv_main_option_two_id"
            app:layout_constraintTop_toTopOf="@+id/iv_main_option_two_id"
            tools:ignore="RtlCompat,RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_main_option_three_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/iv_accept"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_option_two_id"
            app:layout_constraintStart_toStartOf="@+id/iv_main_option_two_id"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_option_two_id"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_main_option_three_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/option_three"
            android:textColor="@color/text_label"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_option_three_id"
            app:layout_constraintStart_toEndOf="@+id/iv_main_option_three_id"
            app:layout_constraintTop_toTopOf="@+id/iv_main_option_three_id"
            tools:ignore="RtlCompat,RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_main_option_four_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/iv_accept"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_option_three_id"
            app:layout_constraintStart_toStartOf="@+id/iv_main_option_three_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_option_three_id"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/option_four"
            android:textColor="@color/text_label"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_option_four_id"
            app:layout_constraintStart_toEndOf="@+id/iv_main_option_four_id"
            app:layout_constraintTop_toTopOf="@+id/iv_main_option_four_id"
            tools:ignore="RtlCompat,RtlHardcoded" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_logo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/iv_app"/>

        <TextView
            android:id="@+id/tv_slogan_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/allura_regular"
            android:gravity="center"
            android:text="@string/app_slogan"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/bt_top_id"
            style="@style/Button_Forms"
            android:text="@string/begin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>