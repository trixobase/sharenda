            style="@style/TextView_Setting"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/group_category_enjoy"/>

    </LinearLayout>

    <include layout="@layout/my_linear_setting"/>

</LinearLayout>
