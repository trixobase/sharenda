<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".domain.fragment.InfoTeamFragment"
    android:background="@drawable/iv_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_owner_id"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/iv_owner"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints,RtlHardcoded"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_owner"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="@font/apple"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_owner_role_id"
                app:layout_constraintStart_toEndOf="@+id/iv_owner_id"
                tools:ignore="MissingConstraints,RtlHardcoded" />

            <TextView
                android:id="@+id/tv_owner_role_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_owner_post"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/apple"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_owner_id"
                tools:ignore="MissingConstraints,RtlHardcoded" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/sc_bluedark_white"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/history"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:gravity="right"
            android:fontFamily="@font/sofia"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_history"
            android:textColor="@color/text_default"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left"
            android:fontFamily="@font/apple"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/sc_bluedark_white"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/location"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:fontFamily="@font/sofia"
            android:background="@drawable/sc_bluedark_white"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_default"
            android:textSize="17sp"
            android:text="@string/app_location"
            android:gravity="left"
            android:fontFamily="@font/apple"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/sc_bluedark_white"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/sc_bluedark_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_town"
                android:textColor="@color/text_default"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="left"
                android:fontFamily="@font/apple"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_street"
                android:textColor="@color/text_default"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="left"
                android:fontFamily="@font/apple"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_number"
                android:textColor="@color/text_default"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="left"
                android:fontFamily="@font/apple"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>